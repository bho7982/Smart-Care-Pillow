<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_setting_userName"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:text="님의 베게 동작 정보 입니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="베개 DB 정보"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:text="저장된 공기값"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/airbag_position"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:id="@+id/imageView5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="현재 베개 정보 가져오기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GetPillowAirInformaiton_Button"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:text="초기화"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PillowAirDBReset_Button"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="현재 에어백 공기 양 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:id="@+id/PillowAir_TextView" />

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/AirBag_One">

        <RadioButton
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AirBag_One"
            android:layout_weight="1" />

        <RadioButton
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AirBag_Two"
            android:layout_weight="1" />

        <RadioButton
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AirBag_Three"
            android:layout_weight="1" />

        <RadioButton
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AirBag_Four"
            android:layout_weight="1" />

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:text="0%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PillowAir_TimerDB_TextView"
            android:gravity="center"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="+ 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Air_PlueFive"
            android:layout_weight="1" />

        <Button
            android:text="+ 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Air_PlueOne"
            android:layout_weight="1" />

        <Button
            android:text="- 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Air_MinOne"
            android:layout_weight="1" />

        <Button
            android:text="- 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Air_MinFive"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="공기 주입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PillowAirAdd_Button"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:text="중지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            android:text="공기 빼기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PillowAirMin_Button"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />
    </LinearLayout>

</LinearLayout>