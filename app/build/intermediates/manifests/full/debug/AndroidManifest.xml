        <activity android:name="kr.re.DDil.CarePillow.PillowControl" />
        <activity android:name="kr.re.DDil.UI.Graph_UI" />
        <activity android:name="kr.re.DDil.UI.Graph_UI2" />
        <activity
            android:name="kr.re.DDil.Bluetooth.BluetoothSerialClient$BluetoothUpActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
